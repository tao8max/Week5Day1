<h1>Sign Up:</h1>

<%=form_for @user do |f| %>
	<%=f.label :username, "Username" %>
	<%=f.text_field :username %><br>
	<%=f.label :email, "Email" %>
	<%=f.text_field :email %><br>
	<%=f.label :password, "Password" %>
	<%=f.text_field :password %><br>
	<%=f.submit %>
<%end%>

<h2>Have an account already?</h2>
<%= link_to "LOG IN", login_form_path %>